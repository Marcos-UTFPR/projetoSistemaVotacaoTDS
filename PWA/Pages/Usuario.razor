@page "/cadastro-usuario"
@using projetoSistemaVotacao.Model
@inject HttpClient Http

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center mb-4">Cadastro de Usuárior</h3>

            @if (!string.IsNullOrEmpty(mensagem))
            {
                <div class="alert @(sucesso ? "alert-success" : "alert-danger")" role="alert">
                    @mensagem
                </div>
            }

            <EditForm Model="@usuario" OnValidSubmit="EnviarUsuario">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label for="nome" class="form-label">ID:</label>
                    <InputText id="nome" @bind-Value="usuario.UsuarioID" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="descricao" class="form-label">E-mail:</label>
                    <InputText id="descricao" @bind-Value="usuario.Email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="nome" class="form-label">Senha:</label>
                    <InputText id="nome" @bind-Value="usuario.Senha" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="descricao" class="form-label">UsuarioAcesso:</label>
                    <InputText id="descricao" @bind-Value="usuario.UsuarioAcesso" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary w-100">Enviar</button>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private UsuarioModeloModel usuario = new UsuarioModeloModel();
    private string mensagem = string.Empty;
    private bool sucesso = true; // controla o estilo da mensagem (sucesso ou erro)

    private async Task EnviarUsuario()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("api/usuarios", usuario);

            if (response.IsSuccessStatusCode)
            {
                mensagem = "Usuário cadastrado com sucesso!";
                sucesso = true; // exibe a mensagem de sucesso
                usuario = new UsuarioModeloModel(); // limpa o formulário
            }
            else
            {
                mensagem = "Erro ao cadastrar o usuario.";
                sucesso = false; // exibe a mensagem de erro
            }
        }
        catch (Exception ex)
        {
            mensagem = $"Erro na requisição: {ex.Message}";
            sucesso = false;
        }
    }
}