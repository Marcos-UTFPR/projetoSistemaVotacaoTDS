@page "/cadastro-candidato"
@using projetoSistemaVotacao.Model
@inject HttpClient Http

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center mb-4">Cadastro de Candidato</h3>

            @if (!string.IsNullOrEmpty(mensagem))
            {
                <div class="alert @(sucesso ? "alert-success" : "alert-danger")" role="alert">
                    @mensagem
                </div>
            }

            <EditForm Model="@candidato" OnValidSubmit="EnviarCandidato">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label for="descricao" class="form-label">ID:</label>
                    <InputText id="descricao" @bind-Value="candidato.CandidatoID" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="nome" class="form-label">Nome:</label>
                    <InputText id="nome" @bind-Value="candidato.Nome" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary w-100">Enviar</button>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private CandidatoModeloModel candidato = new CandidatoModeloModel();
    private string mensagem = string.Empty;
    private bool sucesso = true; // controla o estilo da mensagem (sucesso ou erro)

    private async Task EnviarCandidato()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("api/candidatos", candidato);

            if (response.IsSuccessStatusCode)
            {
                mensagem = "Candidato cadastrado com sucesso!";
                sucesso = true; // exibe a mensagem de sucesso
                candidato = new CandidatoModeloModel(); // limpa o formulário
            }
            else
            {
                mensagem = "Erro ao cadastrar o candidato.";
                sucesso = false; // exibe a mensagem de erro
            }
        }
        catch (Exception ex)
        {
            mensagem = $"Erro na requisição: {ex.Message}";
            sucesso = false;
        }
    }
}